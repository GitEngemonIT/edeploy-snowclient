<!-- Modal de solução para ServiceNow -->
<div id="snowclient-solution-modal" class="modal" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Complemento de Solução - ServiceNow</h3>
            </div>
            
            <div class="modal-body">
                <form id="snow-solution-form">
                    <div class="form-group">
                        <label for="snow-solution">Solução</label>
                        <textarea id="snow-solution" name="u_bk_solucao" class="form-control" readonly></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="snow-close-type">Tipo de Encerramento</label>
                        <input type="text" id="snow-close-type" name="u_bk_tipo_encerramento" class="form-control" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label for="snow-solution-class">Classificação da Solução</label>
                        <input type="text" id="snow-solution-class" name="u_bk_ic_impactado" class="form-control" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label for="snow-solution-code">Código de Solução</label>
                        <select id="snow-solution-code" name="u_bk_type_of_failure" class="form-control" required>
                            <option value="">Selecione...</option>
                            <option value="Manutenção de cabeamento">Manutenção de cabeamento</option>
                            <option value="Manutenção do equipamento">Manutenção do equipamento</option>
                            <option value="Normalizado sem intervenção">Normalizado sem intervenção</option>
                            <option value="Substituição de cabeamento">Substituição de cabeamento</option>
                            <option value="Substituição do equipamento">Substituição do equipamento</option>
                        </select>
                    </div>
                </form>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary js-cancel">Cancelar</button>
                <button type="submit" form="snow-solution-form" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>